
@{
    ViewBag.Title = "CourseManager";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/Contents/css/coursedetail.css" rel="stylesheet" />
<div class="" ng-controller="myCourse">
    <div class="mycourse">
        <div class="mycourse-header">
            <div class="col-lg-6  col-md-6 hidden-xs hidden-sm">
                <div class="myCourse-label">Khóa học của tôi</div>
            </div>
            <div class="col-lg-6 col-md-6">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs mycourse-tab" role="tablist">
                    <li role="presentation" id="mycourse-tab" class="active"><a href="#danghoc" aria-controls="home" role="tab" data-toggle="tab">Đang học</a></li>
                    <li role="presentation" id="mycourse-tab"><a href="#quantam" aria-controls="profile" role="tab" data-toggle="tab">Quan Tâm</a></li>
                </ul>

                <!-- Tab panes -->


            </div>
        </div>
        <div class="row nomargin">
            <div class="list-mycourse">
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="danghoc">
                        <div class="list-course">
                            <div class="col-md-3 col-sm-6 col-xs-6 slider-top-grids course-item" ng-repeat="item in myCourses">
                                <div class="course-item-img">
                                    <a href="/Home/Detail/{{item.CourseID}}"><img src="{{item.Avatar}}" /></a>

                                </div>
                                <div class="course-item-info">
                                    <h3>
                                        <a href="/Home/Detail" class="title title-info">{{item.CourseName}}</a>
                                    </h3>
                                    <div class="rating">
                                        <div class="rate-box">
                                            <span class="s-rating smaller static">

                                                <span ng-style="{width: ((item.ViewCount / 5000000)*100) + '%'}"></span>
                                            </span>
                                            <span>(564)</span>
                                        </div>
                                    </div>
                                    <ul>
                                        <li><p class="author author-info"> <i class="fa fa-male"></i><a href="#" class="author">{{item.UserName}}</a></p></li>
                                        <li class="right-list"><p class="views views-info">{{item.ViewCount | number}}<i class="fa fa-eye"></i></p></li>
                                    </ul>
                                    <div class="course-price saleoff">
                                        <strike>{{item.PriceSale | number}} đ</strike>     <span class="price">{{item.Price | number}} ₫</span>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="quantam"></div>
                </div>

            </div>
        </div>
    </div>
</div>
