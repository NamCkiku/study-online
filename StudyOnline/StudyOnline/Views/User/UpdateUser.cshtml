
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <link href="~/Contents/css/coursedetail.css" rel="stylesheet" />
    <link href="~/Contents/Plugins/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
    <script src="~/Contents/js/jquery.js"></script>
    <script src="~/Contents/Plugins/bootstrap-fileupload/bootstrap-fileupload.js"></script>
    <div class="user-info-header">
        <h1 style="width:100%">
            Cập nhật tài khoản
        </h1>
    </div>
    <div class="row no-padding">
        <div class="col-lg-3 no-padding no-padding-right">
            <ul class="zn-left-tabs">
                <li class="active">
                    <a href="#">
                        <i class="fa fa-user"></i>
                        <b>Thông tin cá nhân</b>
                        <p>Họ tên, điện thoại, địa chỉ,....</p>
                    </a>
                </li>
                <li class="">
                    <a href="#">
                        <i class="fa fa-gear"></i>
                        <b>Tài Khoản</b>
                        <p>Thay đổi Email và mật khẩu,...</p>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-lg-9 no-padding">
            <div class="content-infouser">
                <div class="tab-content padding-30">
                    <div class="tab-pane fade in active" id="info-basic">
                        <div id="update-profile-form" class="form-horizontal">
                            <div class="form-group">
                                <label for="user_name" class="col-sm-3 control-label">Tên đăng nhập <span class="required-text">*</span></label>
                                <div class="col-sm-8">
                                    <input name="user_name" maxlength="255" placeholder="" disabled="disabled" type="text" class="form-control" id="user_name" value="namckiku">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">Mật khẩu <span class="required-text">*</span></label>
                                <div class="col-sm-8 control-label">
                                    <a class="btn-link zn-v3 pull-left" href="/doi-mat-khau" target="_blank">Thay đổi mật khẩu</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label">E-mail <span class="required-text">*</span></label>
                                <div class="col-sm-8">
                                    <input id="email" type="text" class="required form-control" name="email" maxlength="255" value="tranhoangnam11373@gmail.com">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="last_name" class="col-sm-3 control-label">Tên hiển thị</label>
                                <div class="col-sm-8">
                                    <input id="display-name" type="text" class="form-control" name="display_name" maxlength="255" value="Nam Ckiku">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phone" class="col-sm-3 control-label">Điện thoại <span class="required-text">*</span></label>
                                <div class="col-sm-8">
                                    <input id="phone" type="text" class="form-control" name="phone" maxlength="255" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Ảnh Đại Diện</label>
                                <div class="col-sm-8">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <input type="hidden">
                                        <div class="fileupload-new thumbnail" style="width: 130px; height: 100px;">
                                            <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                                        </div>
                                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 100px; max-height: 150px; line-height: 10px;"></div>
                                        <div>
                                            <span class="btn btn-success btn-xs btn-file">
                                                <span class="fileupload-new"><i class="fa fa-paper-clip"></i>Chọn Ảnh</span>
                                                <span class="fileupload-exists"><i class="fa fa-undo"></i>Thay Đổi</span>
                                                <input type="file" class="default">
                                            </span>
                                        </div>
                                    </div>
                                    <span class="label label-danger">NOTE!</span>
                                    <span>
                                        Kích thước hình đại diện là 480 x 270 px.
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <input class="btn btn-success" type="submit" value="Lưu">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


